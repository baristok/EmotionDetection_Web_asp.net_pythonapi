@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Süprizzzz</title>
    <link rel="icon" href="~/images/gif.png">
    <link rel="stylesheet" href="~/css/styles.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container text-center py-5">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h1 class="card-title text-primary">Süpriz!</h1>
            <p class="card-text text-secondary"></p>
            <img src="@ViewBag.GifUrl" alt="Komik GIF" class="img-fluid rounded mt-3" style="border-radius: 8px;">
        </div>
        <div class="container">
                <h1>Sürpriz Kutusu</h1>
                <div class="gift-box" onclick="revealSurprise()">
                    <img src="~/images/gif.png" alt="Hediye Kutusu" class="gift-image">
                </div>
                <div id="surprise" class="hidden">
                    <img src="~/images/surprise.jpg" alt="Sürpriz Görsel" class="surprise-image">
                    <p class="surprise-text">Tebrikler! Sürpriz 🎉</p>
                </div>
            </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<script src="~/js/script.js"></script>
</body>
</html>