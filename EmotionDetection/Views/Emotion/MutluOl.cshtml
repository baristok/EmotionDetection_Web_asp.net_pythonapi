@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mutlu Ol</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container text-center py-5">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h1 class="card-title text-primary">Mutlu Olmak Gibisi mi var</h1>
            <p class="card-text text-secondary"></p>
            <img src="@ViewBag.GifUrl" alt="Komik GIF" class="img-fluid rounded mt-3" style="border-radius: 8px;">
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<script>

    const confettiLoop = () => {
        confetti({
            particleCount: 100,
            startVelocity: 30,
            spread: 360,
            origin: { x: Math.random(), y: Math.random() - 0.2 } // Farklı pozisyonlardan yayılır
        });


        setTimeout(confettiLoop, 1000);
    };


    confettiLoop();
</script>
</body>
</html>
